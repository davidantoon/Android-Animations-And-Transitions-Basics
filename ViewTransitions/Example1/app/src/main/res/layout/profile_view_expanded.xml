<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.kiwiapps.viewtransition1.MainActivity">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/profile_container"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/profile_pic_container"
                android:layout_width="150dp"
                android:layout_height="55dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="#eee"
                >
                <ImageView
                    android:id="@+id/profile_pic"
                    android:layout_marginTop="5dp"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:src="@drawable/my_avatar"
                    />
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="David Antoon"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="60dp"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/profile_age"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="23 years old"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="84dp"
                android:textSize="12sp"
                android:visibility="visible"
                android:textColor="#999"
                />
            <TextView
                android:id="@+id/profile_position"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="Software Developer"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="100dp"
                android:fontFamily="monospace"
                android:textSize="10sp"
                android:visibility="visible"
                android:textColor="#999"
                />
            <TextView
                android:id="@+id/profile_phone"
                android:layout_width="124dp"
                android:layout_height="wrap_content"
                android:text="+97254551379"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="116dp"
                android:fontFamily="monospace"
                android:textSize="10sp"
                android:visibility="visible"
                android:textColor="#999"
                />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
